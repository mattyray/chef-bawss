{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/Dockerfile",
    "watchPatterns": ["backend/**"]
  },
  "deploy": {
    "startCommand": "python manage.py migrate --noinput && gunicorn --bind 0.0.0.0:$PORT config.wsgi:application"
  }
}
